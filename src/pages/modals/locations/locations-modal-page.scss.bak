modal-locations {
  ion-scroll {
    width: 100%;
    height: 100%;
  }

  .options-toolbar{
    min-height: initial;
    padding: 0;
  }

  .segment-button {
    border-color: color($colors, lightbrown) !important;
    color: color($colors, lightbrown) !important;
  }

  .slide-background {
    background-repeat:no-repeat; 
    background-size: cover;
    background-position: center center;
  }

  .scroll-content {
    padding: 0 !important;
  }

  .slide-background{
    width: 100%;
  }

  .locations-info {
    height: 100% !important;
    position: absolute;
    background: -webkit-linear-gradient(top, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 57%,rgba(0,0,0,0.65) 100%);
    bottom: 0;
    color: color($colors, lightG) !important;
    display: flex;
    align-items: flex-end;
    padding-bottom: 5%;
  }
}

